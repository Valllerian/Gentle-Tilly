{{!-- Search results table --}}
<section class="container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Status</th>
        <th scope="col">Home Name</th>
        <th scope="col">Away Name</th>
        <th scope="col">Game Date</th>
        <th scope="col">Game Detail</th>
      </tr>
    </thead>
    {{!-- displaying table row for each game --}}
    {{#each gamesData as |game|}}
    <tbody class="gameId">
      <tr>
        <th scope="row" class="gameId">{{game.dataValues.status }}</th>
        <td>"{{game.dataValues.home_name }}" | "{{game.dataValues.home_alias }}" </td>
        <td>"{{game.dataValues.away_name }}" | "{{game.dataValues.away_alias }}"</td>
        <td>{{game.dataValues.date_played }}</td>
        <td><a  href="/api/games/details/{{game.dataValues.id }}"> > </a></td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</section>

