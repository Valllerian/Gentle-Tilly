<div class="row mx-auto mt-3" id = "comment-form">
  <div class="col-md-5 ml-5 mr-5 card mx-auto">
    <h3>Add a New Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group ">
        <label for="comment">Tell them!</label>
        <textarea class="form-input comment" id="comment" name="comment-content"></textarea>
      </div>
      <div class="form-group mx-auto" id="comment-button">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>




<script src="/js/comment.js"></script>